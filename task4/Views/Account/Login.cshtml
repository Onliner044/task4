@model task4.ViewModel.LoginViewModel;
@{
    ViewData["Title"]="Login";
}

<div class="offset-4 col-4 h-75 middle border">
    <form class="middle offset-3 col-6" asp-action="Login" asp-controller="Account" asp-antiforgery="true">
        <div class="text-center h3 mb-3">Please Login</div>
        <div class="text-center">
            @Html.ValidationSummary(true, "", "div")

            <div class="form-group">
                @Html.ValidationMessageFor(x => x.Email)
                <input class="form-control mt-2" asp-for="Email" type="email" placeholder="Email" />
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(x => x.Password)
                <input class="form-control mt-2" asp-for="Password" type="password" placeholder="Password" />
            </div>
            <div class="form-group">
                <a href="/Account/Register">Register</a>
            </div>
            <div class="form-group">
                <input asp-action="Login" class="btn btn-outline-dark" type="submit" value="LogIn" />
            </div>
        </div>
    </form>
</div>